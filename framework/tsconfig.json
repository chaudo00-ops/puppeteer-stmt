{
	// For compilerOptions details, see
	// https://www.typescriptlang.org/docs/handbook/compiler-options.html.
	"compilerOptions": {
		// Recommended config for Node 12. For details, see
		// https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
		// TODO: Remove DOM when https://github.com/axios/axios/issues/3219 is fixed.
		"lib": [
			"ES2021",
			// Required for AWS SDK typing https://docs.aws.amazon.com/AWSJavaScriptSDK/latest/
			"ES5",
			"ES2015.Promise"
		],
		"typeRoots": ["./node_modules/@types", "./node_modules/jest-expect-message/types"],

		// Required for AWS SDK imports
		"esModuleInterop": true,
		"module": "commonjs",
		"target": "ES2020",
		// Enable sanity checking of javascript files.
		// For details, see https://stackoverflow.com/a/41258842/1337463.
		"allowJs": true,

		// Make compiler more strict with typechecking.
		"alwaysStrict": true,
		"noImplicitAny": true,

		// Set up incremental building to speed up tsc.
		// Incremental build data is stored in tsc-out.
		// tsc-out is gitignored and skipped by tests.
		"outDir": "./tsc-out",
		"sourceMap": false,
		"incremental": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"include": [
		"db-snapshots/**/*.test.ts",
		"deploy/scripts/**/*",
		"src/**/*",
		"test/scripts/**/*",
		"test/setEnvVars_andDefaultMocks.ts",
		"features/**/*",
		"2-db/**/*",
		"node_modules/jest-expect-message/types/index.d.ts"
	],
	//"exclude": ["test/IntegrationTest/*", "test/e2e", "**/cdkapi/**/*.test.ts","test/*"] if exclude test, then we have refactor issues
	"exclude": [],
	"ts-node": {
		"files": true,
		"transpileOnly": true
	}
}
